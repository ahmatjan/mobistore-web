<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<title>异常信息</title>
<style type="text/css">
            .bigger-125 {
                font-size: 125%;
            }
            .blue {
                color: #478fca !important;
            }
            .page-content {
                background: none repeat scroll 0 0 #fff;
                margin: 0;
                padding: 8px 20px 24px;
            }
            .well {
                background-color: #f5f5f5;
                border: 1px solid #e3e3e3;
                border-radius: 4px;
                box-shadow: 0 1px 1px rgba(0, 0, 0, 0.05) inset;
                margin-bottom: 20px;
                min-height: 20px;
                padding: 19px;
            }
            .well h1, .well h2, .well h3, .well h4, .well h5, .well h6 {
                margin-top: 0;
            }
            .well h1, .well h2, .well h3 {
                line-height: 36px;
            }
            h3.smaller {
                font-size: 21px;
            }
            .lighter {
                font-weight: lighter;
            }
            .row {
                margin-left: -12px;
                margin-right: -12px;
            }
            .row:before, .row:after {
                content: " ";
                display: table;
            }
            .row:after {
                clear: both;
            }
            .row:before, .row:after {
                content: " ";
                display: table;
            }
            .row:after {
                clear: both;
            }
             .col-xs-12 {
                min-height: 1px;
                padding-left: 12px;
                padding-right: 12px;
                position: relative;
                width: 100%;
            }

            .space {
                margin: 12px 0;
                max-height: 1px;
                min-height: 1px;
                overflow: hidden;
            }
            .error-container {
                background: none repeat scroll 0 0 #fff;
                margin: 20px;
                padding: 0;
            }
        </style>
    </head>

    <body>
        <div class="page-content">
            <div class="row">
                <div class="col-xs-12">
                    <div class="error-container">
                        <div class="well">
                            <h1 class="grey lighter smaller">
                               <span class="blue bigger-125">
                                                                                                    出错啦！！！
                                </span>
                            </h1>
                            <hr>
                            <h3 class="lighter smaller">
                                                                                             错误信息如下：
                            </h3>
                            <div>
                                ${error }
                            </div>
                            <div class="space"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
  </body>
</html>